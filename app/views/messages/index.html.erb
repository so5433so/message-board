<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
      <% end %>
  </div>
</div>
  
<%= form_for(@message) do |f| %>
  <div class="input-group">
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-user" aria-hidden="true" >名前:</span>
    </span>
      <%= f.text_field :name, class: "form-control", placeholder: "山田　太郎" %>
  </div>
  
  <br>
  
  <div class="input-group">
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-align-left" aria-hidden="true">内容:</span>
    </span>
      <%= f.text_area :body, cols: 100, rows: 10, maxlength: "200",class: "form-control", placeholder: "ご自由にコメントください" %>
  </div>
  
  <br>
  <br>
  <br>
  
  <span class="glyphicon glyphicon-send" aria-hidden="true">
    <%= f.submit class: "btn btn-sm btn-prifmary" %>
  </span>
<% end %>